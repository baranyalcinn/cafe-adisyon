{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/shared/**/*",
    "prisma.config.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "prisma-client-generated": ["./node_modules/prisma-client-generated"]
    },
    "types": [
      "electron-vite/node"
    ]
  }
}